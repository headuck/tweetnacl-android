<resources xmlns:android="http://schemas.android.com/apk/res/android">

 <style name="AppBaseTheme" parent="Theme.AppCompat.Light" />
 <style name="AppTheme"     parent="AppBaseTheme"          />

 <!-- PAGE -->
 
 <style name="PageBase">
  <item name="android:background">#ffffffff</item>
  <item name="android:layout_width">match_parent</item>
  <item name="android:layout_height">match_parent</item>
 </style>
 
 <style name="Page" parent="PageBase" />
 
 <!-- GROUPBOX -->

 <style name="GroupBoxBase">
  <item name="android:layout_width">match_parent</item> 
  <item name="android:layout_height">wrap_content</item>
  <item name="android:layout_marginTop">8dp</item>
  <item name="android:layout_marginBottom">8dp</item>
  <item name="android:layout_marginLeft">0dp</item>
  <item name="android:layout_marginRight">0dp</item>
  <item name="android:paddingTop">16dp</item>
  <item name="android:paddingBottom">12dp</item>
  <item name="android:paddingLeft">12dp</item>
  <item name="android:paddingRight">12dp</item>
  <item name="labelColour">@color/groupbox_label</item>
  <item name="labelTextSize">12sp</item>
  <item name="labelMarginLeft">16dp</item>
  <item name="labelMarginRight">16dp</item>
  <item name="labelPaddingLeft">4dp</item>
  <item name="labelPaddingRight">4dp</item>
  <item name="cornerRadius">8dp</item>
  <item name="strokeWidth">1dp</item>
  <item name="strokeColour">@color/groupbox_border</item>    
 </style>
 
 <style name="GroupBox" parent="GroupBoxBase" />
   
 <!-- GRID -->
 
 <style name="CellLabelBase">
  <item name="android:layout_width">wrap_content</item> 
  <item name="android:layout_height">wrap_content</item>
  <item name="android:layout_marginRight">8dp</item>
  <item name="android:textColor">#ff202020</item>
  <item name="android:textSize">12sp</item>
 </style>

 <style name="CellLabel" parent="CellLabelBase" />
 
 <style name="CellBase">
  <item name="android:background">#ffffffff</item>
  <item name="android:layout_width">match_parent</item> 
  <item name="android:layout_height">wrap_content</item>
  <item name="android:padding">1dp</item>
  <item name="android:gravity">center</item>
  <item name="android:textColor">#ff000000</item>
  <item name="android:textSize">12sp</item>
 </style>
 
 <style name="Cell" parent="CellBase" />
 
 <!-- MENU ITEMS -->
 
 <style name="MenuItemBase">
  <item name="android:background">@drawable/background_menuitem</item>    
  <item name="android:layout_width">match_parent</item>
  <item name="android:layout_height">wrap_content</item>
  <item name="android:paddingTop">6dp</item>
  <item name="android:paddingBottom">6dp</item>
  </style>
 
 <style name="MenuItem" parent="MenuItemBase" />

 <!-- BENCHMARK PAGES -->
 
 <style name="LabelBase">
  <item name="android:layout_width">wrap_content</item>
  <item name="android:layout_height">wrap_content</item>
  <item name="android:layout_marginTop">4dp</item>
  <item name="android:layout_marginBottom">4dp</item>
  <item name="android:layout_marginRight">4dp</item>
  <item name="android:singleLine">true</item>
  <item name="android:textSize">13sp</item>    
  </style>
 
 <style name="Label" parent="LabelBase" />
 
 <style name="LoopsLabel" parent="Label">
  <item name="android:layout_alignBaseline">@id/loops</item>
  <item name="android:layout_toLeftOf">@+id/loops</item>
  <item name="android:text">@string/label_loops</item>
 </style>
 
 <style name="ValueBase">
  <item name="android:layout_width">wrap_content</item>
  <item name="android:layout_height">wrap_content</item>
  <item name="android:layout_marginTop">4dp</item>
  <item name="android:layout_marginBottom">4dp</item>
  <item name="android:layout_marginRight">4dp</item>
  <item name="android:singleLine">true</item>
  <item name="android:ellipsize">end</item>
  <item name="android:textSize">13sp</item>    
  <item name="android:textStyle">italic</item>    
  </style>
 
 <style name="Value" parent="ValueBase" />
 
 <style name="FieldBase">
  <item name="android:background">@drawable/background_field</item>    
  <item name="android:layout_width">wrap_content</item>
  <item name="android:layout_height">wrap_content</item>
  <item name="android:layout_marginTop">4dp</item>
  <item name="android:layout_marginBottom">4dp</item>
  <item name="android:paddingTop">4dp</item>
  <item name="android:paddingBottom">4dp</item>
  <item name="android:paddingLeft">8dp</item>
  <item name="android:paddingRight">8dp</item>
  <item name="android:singleLine">true</item>
  <item name="android:ellipsize">end</item>
  <item name="android:textSize">13sp</item>    
  </style>
 
 <style name="Field" parent="FieldBase" />

 <style name="Loops" parent="Field">
  <item name="android:layout_alignParentTop">true</item>
  <item name="android:layout_alignParentRight">true</item>
  <item name="android:inputType">number</item>
  <item name="android:digits">0123456789</item>
 </style>
 
 <style name="GridBase">
  <item name="android:background">@drawable/background_grid</item>
  <item name="android:layout_width">match_parent</item>
  <item name="android:layout_height">wrap_content</item>
  <item name="android:layout_marginTop">12dp</item>
  <item name="android:layout_marginBottom">12dp</item>
  <item name="android:layout_marginLeft">0dp</item>
  <item name="android:layout_marginRight">0dp</item>
  <item name="android:layout_below">@+id/setup</item>
  <item name="android:layout_centerHorizontal">true</item>
  <item name="verticalSpacing">2dp</item>
  <item name="horizontalSpacing">2dp</item>
 </style>
 
 <style name="Grid" parent="GridBase" />
 
 <style name="RunButtonBase">
  <item name="android:background">@drawable/background_button</item>    
  <item name="android:layout_width">match_parent</item>
  <item name="android:layout_height">wrap_content</item>
  <item name="android:layout_marginTop">4dp</item>
  <item name="android:layout_marginBottom">4dp</item>
  <item name="android:textSize">13sp</item>    
 </style>
 
 <style name="RunButton" parent="RunButtonBase" />
 
</resources>
