<resources xmlns:android="http://schemas.android.com/apk/res/android">

 <style name="AppBaseTheme" parent="Theme.AppCompat.Light" />
 <style name="AppTheme"     parent="AppBaseTheme"          />

 <!-- GRID -->
 
 <style name="LabelBase">
  <item name="android:layout_width">wrap_content</item> 
  <item name="android:layout_height">wrap_content</item>
  <item name="android:layout_marginRight">8dp</item>
  <item name="android:textColor">#ff202020</item>
  <item name="android:textSize">12sp</item>
 </style>

 <style name="Label" parent="LabelBase" />
 
 <style name="CellBase">
  <item name="android:background">#ffffffff</item>
  <item name="android:layout_width">match_parent</item> 
  <item name="android:layout_height">wrap_content</item>
  <item name="android:padding">1dp</item>
  <item name="android:gravity">center</item>
  <item name="android:textColor">#ff000000</item>
  <item name="android:textSize">12sp</item>
 </style>
 
 <style name="Cell" parent="CellBase" />
 
 <!-- MENU ITEMS -->
 
 <style name="ButtonBase">
  <item name="android:background">#ffe0e0e0</item>    
  <item name="android:layout_width">match_parent</item>
  <item name="android:layout_height">wrap_content</item>
  <item name="android:layout_marginTop">4dp</item>
  <item name="android:layout_marginBottom">4dp</item>
  <item name="android:textSize">13sp</item>    
  </style>
 
 <style name="Button" parent="ButtonBase" />

 <!-- BENCHMARK PAGES -->
 
 <style name="RunButtonBase">
  <item name="android:background">#ffe0e0e0</item>    
  <item name="android:layout_width">match_parent</item>
  <item name="android:layout_height">wrap_content</item>
  <item name="android:layout_marginTop">4dp</item>
  <item name="android:layout_marginBottom">4dp</item>
  <item name="android:textSize">13sp</item>    
  </style>
 
 <style name="RunButton" parent="RunButtonBase" />
 
</resources>
