<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:background="#ffffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

 <LinearLayout android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
 
  <Button style="@style/MenuItem"
          android:id="@+id/summary"
          android:onClick="onSummary"
          android:text="@string/summary" />
     
  <Button style="@style/MenuItem"
          android:id="@+id/crypto_box"
          android:onClick="onCryptoBox"
          android:text="@string/crypto_box" />
 
  <Button style="@style/MenuItem"
          android:id="@+id/crypto_core"
          android:onClick="onCryptoCore"
          android:text="@string/crypto_core" />
 
  <Button style="@style/MenuItem"
          android:id="@+id/crypto_hash"
          android:onClick="onCryptoHash"
          android:text="@string/crypto_hash" />
 
  <Button style="@style/MenuItem"
          android:id="@+id/crypto_onetimeauth"
          android:onClick="onCryptoOneTimeAuth"
          android:text="@string/crypto_onetimeauth" />
 
  <Button style="@style/MenuItem"
          android:id="@+id/crypto_scalarmult"
          android:onClick="onCryptoScalarMult"
          android:text="@string/crypto_scalarmult" />
 
  <Button style="@style/MenuItem"
          android:id="@+id/crypto_secretbox"
          android:onClick="onCryptoSecretBox"
          android:text="@string/crypto_secretbox" />
 
  <Button style="@style/MenuItem"
          android:id="@+id/crypto_stream"
          android:onClick="onCryptoStream"
          android:text="@string/crypto_stream" />
 
  <Button style="@style/MenuItem"
          android:id="@+id/crypto_sign"
          android:onClick="onCryptoSign"
          android:text="@string/crypto_sign" />
 
  <Button style="@style/MenuItem"
          android:id="@+id/crypto_verify"
          android:onClick="onCryptoVerify"
          android:text="@string/crypto_verify" />
 
 </LinearLayout>
 
</ScrollView>